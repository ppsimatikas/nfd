{
  "name": "nfd",
  "version": "1.0.0",
  "description": "A Decentralized Big Data Infrastructure.",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "ui",
    "contracts/tableland"
  ],
  "scripts": {
    "build:ui": "yarn workspace ui run build",
    "build:contracts": "(cd contracts/nfd && source venv/bin/activate && ape compile)",
    "build": "yarn build:contracts & yarn build:ui",
    "start:ui": "yarn workspace ui run start",
    "start:backend": "firebase emulators:start",
    "start:tableland": "yarn workspace tableland run start",
    "start": "yarn start:tableland & yarn start:backend & yarn start:ui",
    "verify:ui": "yarn workspace ui run test",
    "verify:contracts": "(cd contracts/nfd && source venv/bin/activate && ape test --disable-isolation)",
    "verify": "yarn verify:ui & yarn verify:contracts",
    "deploy:contracts:arbitrum": "(cd contracts/nfd && source venv/bin/activate && ape run deploy --network arbitrum:sepolia)",
    "deploy:contracts:filecoin": "(cd contracts/nfd && source venv/bin/activate && ape run deploy --network filecoin:calibration)"
  },
  "dependencies": {
    "firebase-tools": "^13.13.2"
  }
}
